@using Anbarii.Classes.Values
@using Anbarii.Controllers;
@{
    ViewBag.Title = "ورود";
    Layout = "~/Views/Shared/_home_layout.cshtml";
}
@section header{
    <link rel="stylesheet" type="text/css" href="~/Content/semantic/semantic.min.css">
}
<div class="card card-profile">
    <div class="card-avatar">
        <a href="#pablo">
            <img class="img" src="~/assets/img/login-shield.png" />
        </a>
    </div>
    <div class="card-body">

        <h4 class="card-title">برای شروع وارد شوید</h4>
        <p class="card-description">@ViewBag.error</p>
        @using (Html.BeginForm(HomeController.SIndex, HomeController.SController))
        {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
                @Html.TextBox("Email", "", new { type = "email", @class = "form-control", placeholder = UIStrings.Email })
            </div>
            <div class="form-group has-feedback">
                @Html.Password("Password", "", new { @class = "form-control pwd reveal", placeholder = UIStrings.Password })
                <span class="glyphicon glyphicon-lock form-control-feedback "></span>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-twitter">ورود</button>
                    <a href="@Url.Action(HomeController.SRegister,HomeController.SController)" class="btn btn-twitter">ثبت نام</a>
                </div>
            </div>

        }
    </div>
</div>
@section footer{
    <script>
        $(document).ready(function () {
            $(".reveal").dblclick(function () {
                var $pwd = $(".pwd");
                if ($pwd.attr('type') === 'Password') {
                    $pwd.attr('type', 'text');
                } else {
                    $pwd.attr('type', 'Password');
                }
            });
