@model IQueryable<User>
@using Anbarii.Classes.Values
@using Anbarii.Classes
@using Anbarii.Models
@using Anbarii.Controllers
@{
    TempData[PortalController.SPeople] = "active";
    AnbariiEntities db = new AnbariiEntities();
    ViewBag.Title = "مخاطبین";
    Layout = "~/Views/Shared/_portal_layout.cshtml";
}
@section header{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.css" />
    <link href="~/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/css/colReorder.dataTables.min.css" rel="stylesheet" />

}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-rose">
                <h4 class="card-title">مخاطبین</h4>
                <p class="card-category">لیست مخاطبین</p>
            </div>
            <div class="card-body">
                <div style="text-align:center">
                    <div class="col-lg-3">
                        <span class="group-btn">
                            <a href="@Url.Action(PortalController.SContact,PortalController.SController)" title="ثبت مخاطب جدید" class="btn btn-rose btn-md">ثبت مخاطب جدید</a>
                        </span>
                    </div>
                </div>
                <div style="margin:4%;clear:both"></div>
                <div style="clear:both;border:1px solid #808080"></div>
                <div style="margin: 2%"></div>

                <div class="table-responsive" style="margin-top: 50px; margin-left:auto;margin-right:auto">


                    <table id="DataTable" class="print table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>نام شرکت</th>
                                <th>نام</th>
                                <th>موبایل</th>
                                <th>تلفن</th>
                                <th>کدملی</th>
                                <th>کد اقتصادی</th>
                                <th>آدرس</th>
                                <th>کد پستی</th>
                                <th>ایمیل</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    @if (Members.User.RoleID.Equals(RolesInt.Anbar))
                                    {
                                        <td><a href="@Url.Action(PortalController.SProducts, PortalController.SController, new { ID = item.ID })"> @item.Name_Company</a></td>
                                    }
                                    else if (item.Role.ID.Equals(RolesInt.Anbar))
                                    {
                                        <td><a href="@Url.Action(PortalController.SIndex, PortalController.SController, new { ID = item.ID })"> @item.Name_Company</a></td>
                                    }
                                    else
                                    {
                                        <td> @item.Name_Company</td>
                                    }
                                    <td>@item.Name</td>
                                    <td>@item.Mobile</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Code</td>
                                    <td>@item.Economic_Code</td>
                                    <td>@item.Adress</td>
                                    <td>@item.Code_Posti</td>
                                    <td><a target="_top" href="mailto:@item.Email"> @item.Email</a></td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section footer{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript" language="javascript" src="~/js/dataTables.buttons.min.js"></script>
    <script src="~/js/buttons.colVis.min.js"></script>
    <script src="~/js/buttons.print.js"></script>
    <script src="~/js/dataTables.colReorder.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#DataTable').DataTable({
                "ordering": false,
                colReorder: true,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "همه"]],
                dom: 'Bfrtip',
                columnDefs: [
                    {
                        targets: 1,
                        className: 'noVis'
                    }
                ],
                language: {
                    "emptyTable": "هیچ موردی یافت نشد.",
                    "zeroRecords": "هیچ موردی یافت نشد.",
                    "info": "نمایش _START_ تا _END_ از _TOTAL_ مورد",
                    "infoEmpty": "نمایش 0 تا 0 از 0 مورد",
                    "infoFiltered": "(جداشده از _MAX_ کل موارد)",
                    "lengthMenu": "نمایش _MENU_ مورد",
                    "loadingRecords": "در حال بارگذاری...",
                    "processing": "درحال پردازش...",
                    search: "_INPUT_",
                    searchPlaceholder: "جستجو...",
                    "paginate": {
                        "first": "اولین",
                        "last": "آخرین",
                        "next": "بعدی",
                        "previous": "قبلی"
                    },
                    buttons: {
                        pageLength: {
                            _: "نمایش %d مورد",
                            '-1': "نمایش همه"
                        }
                    }
                },
                buttons: [
                    'pageLength',
                    {
                        text: 'چاپ',
                        extend: 'print',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    'excel',
                    {
                        extend: 'colvisGroup',
                        text: 'نمایش همه ستون ها',
                        show: ':hidden'
                    },
                    {
                        extend: 'colvisGroup',
                        text: 'عدم نمایش همه',
                        hide: ':visible'
                    },
                    {
                        text: 'انتخاب ستون',
                        extend: 'colvis',
                        columns: ':not(.noVis)'
                    }
                ]
            });
        });

    </script>

}



